<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_Layout"
    tools:context=".MainActivity">
    
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        ></com.google.android.material.navigation.NavigationView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:id="@+id/buttons_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/solution_tv"
                android:text="0"
                android:textSize="64dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:layout_margin="16dp"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white" >
            <TextView
                android:id="@+id/resultTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttons_layout"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="64dp"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/buttonC"
                android:backgroundTint="#FF4E4A4A"
                android:text="C"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/buttonBrackOpen"
                android:backgroundTint="#FF4E4A4A"
                android:text="("
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/buttonBrackClose"
                android:backgroundTint="#FF4E4A4A"
                android:text=")"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/buttonModulo"
                android:backgroundTint="#FF4E4A4A"
                android:text="%"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button7"
                android:backgroundTint="#706767"
                android:text="7"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button8"
                android:backgroundTint="#706767"
                android:text="8"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button9"
                android:backgroundTint="#706767"
                android:text="9"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:backgroundTint="#FF4E4A4A"
                android:id="@+id/buttonDivide"
                android:text="/"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button4"
                android:backgroundTint="#706767"
                android:text="4"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button5"
                android:backgroundTint="#706767"
                android:text="5"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button6"
                android:backgroundTint="#706767"
                android:text="6"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:backgroundTint="#FF4E4A4A"
                android:id="@+id/buttonPlus"
                android:text="+"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button3"
                android:backgroundTint="#706767"
                android:text="3"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button2"
                android:backgroundTint="#706767"
                android:text="2"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button1"
                android:backgroundTint="#706767"
                android:text="1"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:backgroundTint="#FF4E4A4A"
                android:id="@+id/buttonMinus"
                android:text="-"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/buttonEqual"
                android:backgroundTint="#FF4E4A4A"
                android:text="="
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/button0"
                android:backgroundTint="#706767"
                android:text="0"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:id="@+id/buttoncomma"
                android:backgroundTint="#FF4E4A4A"
                android:text=","
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="95dp"
                android:layout_height="72dp"
                android:layout_margin="2dp"
                android:textSize="32dp"
                android:backgroundTint="#FF4E4A4A"
                android:id="@+id/buttonMultp"
                android:text="*"

                />

        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>